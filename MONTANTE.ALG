Algoritmo "montante"
Var
   m,c,i,t,resultado,montante:real
Inicio
   escreval("Digite")
   escreva
   escreva("Montante:")
   leia(m)
   escreva
   escreva("Capital:")
   leia(c)
   escreva
   escreva("Taxa:")
   leia(i)
   escreva
   escreva("Tempo:")
   leia(t)
   escreva
   montante<-c*(1+i)^t
   escreva("Resultado:",montante)
   
   


Fimalgoritmo